        border-width: 1px;
        border-radius: 20px;
        transition: linear 0.2s;
    }

    .option:hover{
        background-color: lightgray;
        cursor: pointer;
        transform: scale(1.1);
    }

    .h4{
        text-align: center !important;
    }

    .icon{
        text-align: center;
        opacity: 0.6;
        font-size: 2em;
    }

    a, a:hover{
        text-align: center;
        color: inherit;
        outline: none;
        text-decoration: none;
    }

</style>

<hr>
<h1>Mon compte</h1>
<div class='d-flex justify-content-between py-5'>
    <div class='col-xl-3 option'>
        <a href='donnees-personnelles'>
        <div class='row'>
            <div class='col-xl-12'>
                <h2 class='h4 py-2'>Données personnelles</h2>
            </div>
        </div>
        <div class='row'>
            <div class='col-xl-6 offset-xl-3 icon'>
                <i class="fas fa-user-edit"></i>

            </div>
        </div>
        </a>
    </div>
    <div class='col-xl-3 offset-xl-1 option'>
        <a href='fonctionnalites-cachees'>
        <div class='row'>
            <div class='col-xl-12'>
                <h2 class='h4 py-2'>Fonctionnalités cachées</h2>
            </div>
        </div>
        <div class='row'>
            <div class='col-xl-6 offset-xl-3 icon'>
                <i class="fas fa-eye-slash"></i>
            </div>
        </div>
        </a>
    </div>
    <div class='col-xl-3 offset-xl-1 option'>
        <a href='telechargement'>
        <div class='row'>
            <div class='col-xl-12'>
