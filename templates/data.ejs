<h1 class='py-3'>Gestion des données personnelles</h1>

<% if(notification) { %>
    <div class="<%= classNotification %>" role="alert"> <%= notification %> </div>
<% } %>

<form action="" method="POST" class='py-5'>
<div class="form-group">
    <label for="role">Rôle</label>
    <input type="text" name="role" class="form-control" id="role" aria-describedby="roleHelp" value="<%= user.role %>" disabled>
</div>
<hr>
<div class="form-group">
    <label for="utilisateur">Utilisateur</label>
    <input type="text" name="id" class="form-control" id="utilisateur" aria-describedby="utilisateurHelp" value="<%= user.user %>" disabled>
    <small id="utilisateurHelp" class="form-text text-muted">Ne donnez pas votre identifiant à n'importe qui.</small>
</div>
<div class="form-group">
    <label for="lastname">Nom</label>
    <input type="text" name="lastname" class="form-control" id="lastname" aria-describedby="lastnameHelp" value="<%= user.lastname %>">
</div>
<div class="form-group">
    <label for="firstname">Prénom</label>
    <input type="text" name="firstname" class="form-control" id="firstname" aria-describedby="firstnameHelp" value="<%= user.firstname %>">
</div>

</fieldset>
    <button type="submit" class="btn btn-primary">Modifier</button>
</fieldset>
</form>
<hr>